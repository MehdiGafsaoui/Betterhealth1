{% extends 'client/index.html.twig' %}

{% block stylesheets %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Poppins:wght@400;600&display=swap');
        @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css');
        
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fb;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .hero-section {
            text-align: center;
            background: linear-gradient(135deg, rgb(9, 56, 117), #8ab4f8);
            padding: 60px 20px;
            color: white;
            font-size: 1.7rem;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .hero-section h1 {
            color: #fff;
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 5px rgba(0,0,0,0.2);
        }

        h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.5rem;
            color: #2c3e50;
            text-align: center;
            margin: 40px 0;
            font-weight: 700;
        }

        .search-container {
            display: flex;
            justify-content: center;
            margin-bottom: 30px;
        }

        .search-container input {
            width: 50%;
            padding: 14px;
            font-size: 1.1rem;
            border-radius: 30px;
            border: 1px solid #ccc;
            outline: none;
            transition: all 0.3s;
        }

        .search-container input:focus {
            border-color: rgb(9, 56, 117);
            box-shadow: 0 0 10px rgba(9, 56, 117, 0.3);
        }

        .evenements-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 25px;
            margin: 40px auto;
            padding: 0 20px;
            max-width: 1400px;
        }

        .evenement-card {
            background: #fff;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s;
            overflow: hidden;
            position: relative;
        }

        .evenement-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .evenement-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-radius: 15px;
            margin-bottom: 15px;
        }

        .evenement-info {
            text-align: left;
            padding: 10px 0;
        }

        .evenement-info p {
            margin: 5px 0;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .evenement-info i {
            font-size: 1.3rem;
            color: rgb(9, 56, 117);
        }

        .evenement-card h3 {
            font-size: 1.9rem;
            color: rgb(9, 56, 117);
            margin: 10px 0;
            font-weight: 700;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }

        .btn-details, .btn-reserver {
            background-color: rgb(9, 56, 117);
            color: white;
            padding: 12px 18px;
            border-radius: 30px;
            font-size: 1rem;
            transition: all 0.3s;
            text-decoration: none;
            flex: 1;
            text-align: center;
            margin: 0 5px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .btn-details i, .btn-reserver i {
            font-size: 1.2rem;
        }

        .btn-details:hover, .btn-reserver:hover {
            background-color: rgb(7, 42, 88);
            transform: scale(1.05);
        }

        /* Pagination Styles */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 40px;
            list-style: none;
            padding: 0;
        }

        .pagination li {
            margin: 0 5px;
        }

        .pagination a, .pagination span {
            display: block;
            padding: 10px 15px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            text-decoration: none;
            color: #333;
            transition: background-color 0.3s;
        }

        .pagination a:hover {
            background-color: rgb(9, 56, 117);
            color: #fff;
        }

        .pagination .current {
            background-color: rgb(9, 56, 117);
            color: #fff;
            border-color: rgb(9, 56, 117);
        }
    </style>
{% endblock %}

{% block body %}
{% include 'chatbot.html.twig' %}
    <div class="hero-section">
        <h1>üè• Explorez nos √©v√©nements sant√© üè•</h1>
        <p>D√©couvrez des √©v√©nements passionnants pour votre bien-√™tre ! üöÄ‚ú®</p>
    </div>

    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} text-center">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

   

    <div class="search-container">
        <input type="search" id="myInput" class="form-control" placeholder="Rechercher un √©v√©nement...">
    </div>

    <div class="evenements-container" id="evenements-container">
        {% for evenement in pagination %}
            <div class="evenement-card">
