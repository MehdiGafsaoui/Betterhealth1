            <td>{{ exercice_mental.objectif }}</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="card-footer text-end">
      <a href="{{ path('app_exercice_mental_index') }}" class="btn btn-secondary">Back to list</a>
      <a href="{{ path('app_exercice_mental_edit', {'id': exercice_mental.id}) }}" class="btn btn-warning">Edit</a>
      {{ include('exercice_mental/_delete_form.html.twig') }}
    </div>
  </div>
</div>
{% endblock %}
