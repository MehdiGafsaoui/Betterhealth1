      <h2 class="mb-0">Exercice Mental Details</h2>
    </div>
    <div class="card-body">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th style="width: 150px;">ID</th>
            <td>{{ exercice_mental.id }}</td>
          </tr>
          <tr>
            <th>Video URL</th>
            <td>{{ exercice_mental.videoUrl }}</td>
          </tr>
          <tr>
            <th>Titre</th>
            <td>{{ exercice_mental.titre }}</td>
          </tr>
          <tr>
            <th>Description</th>
