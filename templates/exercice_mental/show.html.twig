    <div class="row mt-4 justify-content-center">
        <!-- Action Buttons -->
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <a href="{{ path('app_exercice_mental_index') }}" class="btn btn-secondary w-100 mb-2">Back to list</a>
                    <a href="{{ path('app_exercice_mental_edit', {'id': exercice_mental.id}) }}" class="btn btn-warning w-100 mb-2">Edit</a>
                    {{ include('exercice_mental/_delete_form.html.twig') }}
