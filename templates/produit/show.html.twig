{% extends 'Client/index.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="w-75">
            <h1 class="text-center">Produit</h1>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">DÃ©tails du Produit</h5>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ produit.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ produit.nom }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ produit.description }}</td>
                            </tr>
                            <tr>
                                <th>Quantite</th>
                                <td>{{ produit.quantite }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-3 text-center">

                {% if 'ROLE_ADMIN' in app.user.roles %}
                    <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Back to list</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Edit</a>
                    {{ include('produit/_delete_form.html.twig') }}
                {% else %}
                    <a href="{{ path('app_produit_index_client') }}" class="btn btn-secondary">Back to list</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
