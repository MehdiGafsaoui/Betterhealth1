{% extends 'Client/index.html.twig' %}

{% block title %}Welcome to BetterHealth{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="text-center w-100">
            <h1 class="mb-4">Welcome to BetterHealth</h1>
            <p class="lead">Donate or request medical products for those in need.</p>

            <div class="row mt-5">
                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">View Products</h5>
                            <p class="card-text">Browse available medical products for donation or request.</p>
                            <a href="{{ path('app_produit_index') }}" class="btn btn-primary">View Products</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">View Categories</h5>
                            <p class="card-text">Explore different categories of medical products available for donation.</p>
                            <a href="{{ path('app_categorie_index') }}" class="btn btn-success">View Categories</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h5 class="card-title">Donate a Product</h5>
                            <p class="card-text">Donate medical products to those in need.</p>
                            <a href="{{ path('app_produit_new') }}" class="btn btn-info">Donate Now</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification Dropdown -->
            <div class="mt-5">
                <h2>Notifications</h2>
                <div class="dropdown">
                    <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Notifications
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        {% for notification in notifications %}
                            <li>
                                <div class="dropdown-item">
                                    {{ notification.message }} - {{ notification.createdAt|date('d/m/Y') }}
                                    <form method="post" action="{{ path('mark_notification_read', {'id': notification.id}) }}" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-link">Mark as Read</button>
                                    </form>
                                </div>
                            </li>
                        {% else %}
                            <li>
                                <div class="dropdown-item">Aucune nouvelle notification.</div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
