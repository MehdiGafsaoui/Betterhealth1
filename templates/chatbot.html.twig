<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chatbot</title>
    <style>
       /* Chatbot container */
       #chat-container {
            width: 350px;
            height: 500px;
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: linear-gradient(to bottom, #000000, #0044cc); /* Black to Blue Gradient */
            border: 2px solid #0044cc;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            z-index: 9999;
            color: white;
            display: flex; /* Initially visible */
        }

        /* Chatbot Header with Close Button */
        #chat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #0044cc;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        #chat-close {
            background: none;
            border: none;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }

        /* Chatbox Messages */
        #chat-box {
            height: 400px;
            overflow-y: auto;
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        /* User Input */
        #user-input {
            width: 100%;
            padding: 10px;
            border: none;
            border-top: 1px solid #ccc;
            font-size: 14px;
            background: #222;
            color: white;
            outline: none;
        }

        /* Messages */
        .message {
            padding: 8px;
            margin: 5px;
            border-radius: 5px;
            max-width: 80%;
        }

        .user {
            background: #007bff;
            color: white;
            text-align: right;
            margin-left: auto;
        }

        .bot {
            background: #1a1a1a;
            color: white;
            text-align: left;
        }

        /* Scrollbar */
        #chat-box::-webkit-scrollbar {
            width: 5px;
        }

        #chat-box::-webkit-scrollbar-track {
            background: #333;
        }

        #chat-box::-webkit-scrollbar-thumb {
            background: #0044cc;
            border-radius: 10px;
        }

        /* Floating Chat Open Button */
        #chat-open {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background: #0044cc;
            color: white;
            font-size: 24px;
            border: none;
            border-radius: 50%;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            cursor: pointer;
            display: none; /* Initially hidden */
        }
    </style>
</head>
<body>

<!-- Chatbot Container -->
<div id="chat-container">
    <div id="chat-header">
        <span>Chatbot</span>
        <button id="chat-close">âœ–</button>
    </div>
    <div id="chat-box"></div>
    <input type="text" id="user-input" placeholder="Ask me about events..." />
</div>

<!-- Floating Chat Open Button -->
<button id="chat-open">ðŸ’¬</button>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const chatContainer = document.getElementById("chat-container");
        const chatOpenButton = document.getElementById("chat-open");
        const chatCloseButton = document.getElementById("chat-close");

        // Close the chatbot when clicking "X"
        chatCloseButton.addEventListener("click", function () {
            chatContainer.style.display = "none"; // Hide chatbot
            chatOpenButton.style.display = "block"; // Show floating button
        });

        // Open chatbot when clicking the floating button
        chatOpenButton.addEventListener("click", function () {
            chatContainer.style.display = "flex"; // Show chatbot
            chatOpenButton.style.display = "none"; // Hide floating button
        });

        // Handling Chat Input
        document.getElementById("user-input").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                let userMessage = this.value;
                this.value = "";

                let chatBox = document.getElementById("chat-box");
                let userDiv = document.createElement("div");
                userDiv.className = "message user";
                userDiv.textContent = userMessage;
                chatBox.appendChild(userDiv);

                fetch("/chatbot/query", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ message: userMessage })
                })
                .then(response => response.json())
                .then(data => {
                    let botDiv = document.createElement("div");
                    botDiv.className = "message bot";
                    botDiv.textContent = data.response;
                    chatBox.appendChild(botDiv);
                    chatBox.scrollTop = chatBox.scrollHeight;
                });
            }
        });
    });
</script>

</body>
</html>
