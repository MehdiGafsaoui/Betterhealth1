{% extends 'Client/index.html.twig' %}

{% block body %}
<div class="container table-container">
    <h1>DemandeDonSang Details</h1>

    <!-- Display the details in a container -->
    <div class="details-container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Blood Type</th>
                    <td>{{ demande_don_sang.groupesanguain }}</td>
                </tr>
                <tr>
                    <th>Quantity</th>
                    <td>{{ demande_don_sang.quantite }}</td>
                </tr>
                <tr>
                    <th>Blood Donation Center</th>
                    <td>{{ demande_don_sang.CentreDeDon.name }}</td>
                </tr>
                <tr>
                    <th>Created At</th>
                    <td>{{ demande_don_sang.createdAt|date('d/m/Y H:i') }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Back to list button -->
    <a href="{{ path('app_demande_don_sang_index') }}" class="btn btn-primary">Back to List</a>

    <!-- Edit button, visible only for admins -->
    {% if 'ROLE_ADMIN' in app.user.roles %}
        <a href="{{ path('app_demande_don_sang_edit', {'id': demande_don_sang.id}) }}" class="btn btn-warning">Edit</a>
    {% endif %}

    {{ include('demande_don_sang/_delete_form.html.twig') }}
</div>

<style>
    .table-container {
        margin-top: 100px; /* Adjust according to your header height */
        text-align: center; /* Centers the title */
    }

    .table {
        margin: auto; /* Centers the table */
    }

    .btn {
        margin-top: 15px; /* Adds space between buttons */
        padding: 10px 20px;
    }

    .btn-warning {
        background-color: #ff9800;
        color: white;
        border: none;
        border-radius: 5px;
    }

    .btn-warning:hover {
        background-color: #e68900;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

{% endblock %}
