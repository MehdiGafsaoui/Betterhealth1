{% extends 'Client/index.html.twig' %}


{% block body %}
<title>Blood donation requests</title>
    <div class="table-container">
        <h1 class="text-center mb-4">Blood donation requests</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Blood Type</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for demande_don_sang in demande_don_sangs %}
                <tr>
                    <td>{{ demande_don_sang.id }}</td>
                    <td>{{ demande_don_sang.groupesanguain }}</td>
                    <td>{{ demande_don_sang.quantite }}</td>
                    <td>{{ demande_don_sang.status }}</td>
                    <td>
                        <a href="{{ path('app_demande_don_sang_show', {'id': demande_don_sang.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_demande_don_sang_edit', {'id': demande_don_sang.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_demande_don_sang_new') }}" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <style>
.table-container {
    max-width: 900px;
    margin: 30px auto; /* Add vertical margin to space out from the top */
    padding: 30px;
    background-color: #f8f9fa; /* Light background */
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
}

/* Table styling */
.table {
    width: 100%;
    border-collapse: collapse;
    background-color: #ffffff; /* White background for the table */
}

.table th, .table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd; /* Light border for rows */
}

.table-striped tbody tr:nth-child(odd) {
    background-color: #f1f1f1; /* Slightly shaded rows */
}

thead {
    background-color: #007bff; /* Blue header */
    color: white; /* White text for header */
}

thead th {
    font-weight: bold;
}

/* Button styling */
.btn-info {
    background-color: #17a2b8; /* Light blue */
    color: white;
    border: none;
}

.btn-warning {
    background-color: #ffc107; /* Yellow */
    color: white;
    border: none;
}

.btn-primary {
    background-color: #007bff; /* Primary blue */
    color: white;
    border: none;
}

.btn-sm {
    padding: 5px 10px;
    font-size: 0.875rem;
}

/* Text alignment */
.text-center {
    text-align: center;
}

.mt-4 {
    margin-top: 1.5rem;
}

/* No records message */
td[colspan="5"] {
    font-style: italic;
    color: #888; /* Grey color for "No records found" message */
}
</style>
{% endblock %}


