{% extends 'Client/index.html.twig' %}
{% endblock %}
<div class="table-container">
    <title>New CentreDeDon</title>

    {% block body %}
        <h1>Create new CentreDeDon</h1>

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-signin'}}) }}
            
                {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du centre', 'minlength': '4'}}) }}
                {{ form_row(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'adresse du centre'}}) }}
                {{ form_row(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Ex: +21612345678'}}) }}
                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'exemple@exemple.com'}}) }}
                {{ form_row(form.createdAt, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD HH:MM:SS'}}) }}
                
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
            
            {{ form_end(form) }}
        </div>

        <a href="{{ path('app_centre_de_don_index') }}">back to list</a>
        </div>
        <style>
.table-container {
    margin-top: 100px; /* Adjust according to your header height */
    text-align: center; /* Centers the title */
}

.table {
    margin: auto; /* Centers the table */
}
  body {
        height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column; /* Stack elements vertically */
        justify-content: flex-start; /* Align content to the top */
        align-items: center; /* Horizontally center the form */
        font-family: Arial, sans-serif;
        padding-top: 30px; /* Add space between the top of the page and the form */
    }

    /* Container for the form */
    .form-container {
        width: 100%;
        max-width: 500px; /* You can adjust this value to control the form size */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin-bottom: 20px; /* Add space between form and footer */
    }

    /* Optional: Styling for the heading */
    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    /* Styling for the form elements */
    .form-control {
        margin-bottom: 15px;
    }

    .btn-block {
        width: 100%;
    }

    /* Ensure the footer is at the bottom of the page */
    footer {
        width: 100%;
        background-color: #f8f9fa;
        padding: 10px;
        text-align: center;
        position: relative;
        bottom: 0;
        margin-top: auto; /* Push footer to the bottom */
    }
</style>
    {% endblock %}



