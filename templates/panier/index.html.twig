{% extends 'client/index.html.twig' %}

{% block title %}Carts Dashboard{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="w-100">
            <h1 class="my-4 text-center">Carts Dashboard</h1>

        <!-- Panier Count -->
        <div class="alert alert-info">
            <strong>Total Carts:</strong> {{ panier_count }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Client's Name</th>
                <th>Products</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for panier in paniers %}
                <tr>
                    <td>{{ panier.id }}</td>
                    <td>{{ panier.user.fullName }}</td>
                    <td>
                        <ul>
                            {% for product in panier.products %}
                                <li>{{ product.nom }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        {% if panier.status == 'Accepted' %}
                            <span class="badge bg-success">Accepted</span>
                        {% elseif panier.status == 'Declined' %}
                            <span class="badge bg-danger">Declined</span>
                        {% else %}
                            <span class="badge bg-secondary">Pending</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_panier_accept', {'id': panier.id}) }}" class="btn btn-info btn-sm">Accept</a>
                        <a href="{{ path('app_panier_decline', {'id': panier.id}) }}" class="btn btn-warning btn-sm">Decline</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No carts found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
{% endblock %}