{% extends 'Client/index.html.twig' %}
{% extends 'base.html.twig' %}

{% block title %}Delete Appointment{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4 text-center">
            <h1 class="text-danger mb-4">Delete Appointment</h1>
            <p class="text-muted">Are you sure you want to delete this appointment?</p>
            <p><strong>Service:</strong> {{ rendezvous.service }}</p>
            <p><strong>Date:</strong> {{ rendezvous.date|date('Y-m-d H:i') }}</p>
            <p><strong>Email:</strong> {{ rendezvous.email }}</p>

            <form method="post" action="{{ path('rendezvous_delete', {'id': rendezvous.id}) }}">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a href="{{ path('rendezvous_list') }}" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
{% endblock %}
